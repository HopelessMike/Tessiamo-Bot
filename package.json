{
  "name": "tessiamo-telegram-bot",
  "version": "1.1.1",
  "description": "Chatbot Telegram per Tessiamo: Q&A su tessuti, link al catalogo, memoria conversazionale, broadcast e comandi /catalogo /consiglio /promo.",
  "license": "MIT",
  "type": "commonjs",
  "engines": { "node": ">=20.0.0" },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc -p tsconfig.json",
    "ingest": "tsx src/ingest.ts",
    "reset-db": "tsx scripts/reset-db.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "better-sqlite3": "^9.4.0",
    "dotenv": "^16.4.5",
    "openai": "^4.55.0",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "tsx": "^4.19.2",
    "typescript": "^5.5.4"
  }
